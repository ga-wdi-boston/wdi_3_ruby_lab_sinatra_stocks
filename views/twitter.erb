<h1>Tweets</h1>
<% if @tweets %>
<div class='user-tweets'>
  <h3> Tweets from <%= @user %></h3>
  <% @tweets.each_with_index do |tweet, i| %>
    <div class='tweet'>
    <% break if i > 19%>
      <b>Tweet <%= i+1 %></b>: <%= tweet.text %>
    </div>
    <% end %>
</div>
<% else %>
<div>
  <% if @error %>
    <p><%=@error%></p>
  <% else %>
    <p><%=@msg%></p>
  <% end %>
</div>
<% end %>
